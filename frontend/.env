# Backend API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_NAME=Blog CMS
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_DARK_MODE=true

# Authentication Settings
VITE_JWT_TOKEN_KEY=blog_cms_token
VITE_REFRESH_TOKEN_KEY=blog_cms_refresh_token
VITE_TOKEN_EXPIRY_WARNING=300000

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
VITE_UPLOAD_TIMEOUT=30000

# SEO & Meta Settings
VITE_DEFAULT_META_TITLE=Blog CMS - Modern Blogging Platform
VITE_DEFAULT_META_DESCRIPTION=Create, manage, and share your content with our powerful blog CMS
VITE_DEFAULT_META_KEYWORDS=blog,cms,content management,writing
VITE_SITE_AUTHOR=Blog CMS Team

# Social Media & External Services
VITE_GA_TRACKING_ID=
VITE_GTM_ID=
VITE_FACEBOOK_APP_ID=
VITE_TWITTER_HANDLE=
VITE_GITHUB_URL=
VITE_LINKEDIN_URL=

# Email & Newsletter Settings
VITE_NEWSLETTER_FROM_EMAIL=noreply@yourblog.com
VITE_NEWSLETTER_FROM_NAME=Blog CMS Team
VITE_CONTACT_EMAIL=contact@yourblog.com

# API Keys for External Services
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_API_KEY=
VITE_CLOUDINARY_UPLOAD_PRESET=

# Development Settings
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_API_MOCKING=false
VITE_LOG_LEVEL=debug

# Pagination & Display Settings
VITE_POSTS_PER_PAGE=10
VITE_COMMENTS_PER_PAGE=10
VITE_CATEGORIES_PER_PAGE=10
VITE_USERS_PER_PAGE=10
VITE_DASHBOARD_ITEMS_PER_PAGE=10

# Cache Settings
VITE_CACHE_DURATION=300000
VITE_ENABLE_OFFLINE_CACHE=true

# Security Settings
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_SERVICE_WORKER=false

# Real-time Features
VITE_ENABLE_REAL_TIME_NOTIFICATIONS=false
VITE_WEBSOCKET_URL=ws://localhost:5000
VITE_PUSHER_APP_KEY=
VITE_PUSHER_CLUSTER=

# Backup Settings
VITE_BACKUP_RETENTION_DAYS=30
VITE_AUTO_BACKUP_ENABLED=true
VITE_AUTO_BACKUP_SCHEDULE=0 2 * * *

# Monitoring & Analytics
VITE_ENABLE_ERROR_TRACKING=false
VITE_SENTRY_DSN=
VITE_LOGROCKET_ID=
VITE_HOTJAR_ID=

# PWA Settings
VITE_ENABLE_PWA=false
VITE_PWA_APP_NAME=Blog CMS
VITE_PWA_APP_DESCRIPTION=Modern Blog CMS
VITE_PWA_THEME_COLOR=#3B82F6
VITE_PWA_BACKGROUND_COLOR=#ffffff